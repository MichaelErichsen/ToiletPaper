<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="net.myerichsen.toiletpaper.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home">

        <action app:destination="@id/nav_about" />
        <action app:destination="@id/nav_products" />
        <action app:destination="@id/nav_compare" />
        <action app:destination="@id/nav_suppliers" />
        <action app:destination="@id/settingsActivity" />
        <action
            app:destination="@id/scanActivity"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
        <action app:destination="@id/brandActivity" />
    </fragment>

    <fragment
        android:id="@+id/nav_compare"
        android:name="net.myerichsen.toiletpaper.ui.compare.CompareFragment"
        android:label="@string/menu_compare"
        tools:layout="@layout/compare_fragment">
        <action app:destination="@id/compareActivity" />
    </fragment>


    <fragment
        android:id="@+id/nav_products"
        android:name="net.myerichsen.toiletpaper.ui.products.ProductFragment"
        android:label="@string/menu_products"
        tools:layout="@layout/product_fragment">
        <action app:destination="@id/productActivity" />
    </fragment>

    <fragment
        android:id="@+id/nav_suppliers"
        android:name="net.myerichsen.toiletpaper.ui.suppliers.SupplierFragment"
        android:label="@string/menu_suppliers"
        tools:layout="@layout/supplier_fragment">
        <action app:destination="@id/supplierActivity" />
    </fragment>

    <fragment
        android:id="@+id/nav_about"
        android:name="net.myerichsen.toiletpaper.ui.about.AboutFragment"
        android:label="@string/menu_about"
        tools:layout="@layout/fragment_about" />
    <activity
        android:id="@+id/settingsActivity"
        android:name="net.myerichsen.toiletpaper.SettingsActivity"
        android:label="SettingsActivity" />
    <activity
        android:id="@+id/compareActivity"
        android:name="net.myerichsen.toiletpaper.CompareActivity"
        android:label="activity_compare"
        tools:layout="@layout/activity_compare" />
    <activity
        android:id="@+id/productActivity"
        android:name="net.myerichsen.toiletpaper.ProductActivity"
        android:label="activity_product"
        tools:layout="@layout/activity_product" />
    <activity
        android:id="@+id/scanActivity"
        android:name="net.myerichsen.toiletpaper.ScanActivity"
        android:label="activity_scan"
        tools:layout="@layout/activity_scan" />
    <activity
        android:id="@+id/supplierActivity"
        android:name="net.myerichsen.toiletpaper.SupplierActivity"
        android:label="activity_supplier"
        tools:layout="@layout/activity_supplier" />
    <activity
        android:id="@+id/brandActivity"
        android:name="net.myerichsen.toiletpaper.BrandActivity"
        android:label="activity_brand"
        tools:layout="@layout/activity_brand" />

</navigation>